<Window x:Class="NolekSymbols.View.SaveChangesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Save changes" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.ColumnSpan="2" x:Name="TextBlock">There are unsaved changes</TextBlock>
        <Button x:Name="OkButton" Grid.Row="1" Grid.Column="0" Width="100" Margin="10" Click="SaveButton_OnClick">Save</Button>
        <Button x:Name="NotOkButton" Grid.Row="1" Grid.Column="1" Width="100" Margin="10" Click="DiscardButton_OnClick">Discard</Button>
    </Grid>
</Window>